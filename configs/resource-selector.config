process {
  //beforeScript = 'ulimit -c unlimited; hostname; date; pwd'

  // ERROR HANDLING
  errorStrategy = { task.exitStatus in [1,2,3,4,5,6,126,127,134,135,136,137,139,140,143,245,247,249,250,255] ? 'retry' : 'terminate' }
  maxErrors = '-1'
  maxRetries = 20
  
  // RESOURCE MANAGEMENT //
    withLabel:smallMemory {
        cpus = { params.threads }
        time = 5.m
        memory = 2.GB
    }
    withLabel:mediumMemory {
        cpus = { params.threads }
        time = { 15.m * task.attempt }
        memory = { 5.GB * task.attempt }
    }
    withLabel:bigMemory {
        time = { 15.m * task.attempt }
        cpus = { params.threads }
        memory = { 90.GB * task.attempt }
    }
    withLabel:longRun {
        time = 10.h
        cpus = 40
        memory = 90.GB
    }
    withLabel:extractPalindromes {
        cpus = { params.threads }
        time = 3.h
        memory = 10.GB
    }
    withLabel:splitVCF {
        cpus = { params.threads }
        time = 3.h
        memory = 10.GB
    }
    withLabel:alignGenotypes {
        time = 3.h
        cpus = { params.threads }
        memory = 80.GB
    }
    withLabel:phaseGenotypes {
        time = 20.h
        cpus = { params.threads }
        memory = 30.GB
    }
    withLabel:phase_shapeit {
        time = 48.h
        cpus = { params.threads }
        memory = 100.GB
    }
    withLabel:mem_minimac4 {
        time = 24.h
        cpus = { params.threads }
        memory = 30.GB
    }

}

